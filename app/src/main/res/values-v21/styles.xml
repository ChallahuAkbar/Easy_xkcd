<resources>
    <!-- Base application theme. -->
    <style name="DefaultTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/AccentDefault</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/ColorPrimary</item>

        <item name="android:dialogTheme">@style/SettingsDialog</item>
        <item name="android:alertDialogTheme">@style/SettingsDialog</item>

    </style>

    <style name="SettingsDialog" parent="android:Theme.Material.Light.Dialog.Alert">
